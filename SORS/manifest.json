{
    "manifest_version": 3,
    "name": "Steam Order Scanner",
    "version": "2.0.0",
    "short_name": "SORS",
    "description": "Helps keep your Steam Market buy orders profitable and enhances market pages with useful features.",
    "icons": {
        "16": "ico/16.png",
        "48": "ico/48.png",
        "128": "ico/128.png"
    },
    "permissions": ["storage", "activeTab", "tabs", "scripting"],
    "host_permissions": ["*://steamcommunity.com/*"],
    "action": {
        "default_popup": "ext/popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://steamcommunity.com/market/",
                "*://steamcommunity.com/market/#",
                "*://steamcommunity.com/market"
            ],
            "js": ["site/market.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://steamcommunity.com/market/listings/*/*"],
            "js": ["site/listings.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["site/market.page.js", "site/listings.page.js"],
            "matches": ["*://steamcommunity.com/*"]
        }
    ]
}
